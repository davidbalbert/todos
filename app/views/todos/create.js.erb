<% if @todo.valid? %>
    <% if @list.todos.count == 1 %>
        $("#todos-container").
        replaceWith("<%=j render 'todos_container' %>");
    <% else %>
        $("#todos").append("<%=j render @todo %>");
    <% end %>

    $("#list-header").replaceWith("<%=j render 'lists/header' %>");
<% end %>

$("form#new_todo").replaceWith("<%=j render 'form' %>");
